oc create secret generic cinder-nfs-config --from-file=nfs-cinder-conf
oc create secret generic subscription-manager \
--from-literal rhc_auth='{"login": {"username": "your_username", "password": "your_password"}}'
oc create secret generic redhat-registry --from-literal edpm_container_registry_logins='{"registry.redhat.io": {"<username>": "<password>"}}' -n openstack

cd ~/.ssh/
oc create secret generic dataplane-ansible-ssh-private-key-secret --save-config --dry-run=client --from-file=authorized_keys=/home/dem/.ssh/id_ed25519.pub --from-file=ssh-privatekey=/home/dem/.ssh/id_ed25519 --from-file=ssh-publickey=/home/dem/.ssh/id_ed25519.pub -n openstack -o yaml | oc apply -f-
ssh-keygen -f ./id -t ecdsa-sha2-nistp521 -N ''
oc create secret generic nova-migration-ssh-key --from-file=ssh-privatekey=id --from-file=ssh-publickey=/home/dem/.ssh/id.pub -n openstack -o yaml | oc apply -f-
